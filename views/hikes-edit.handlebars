<!-- views/hikes-edit.handlebars -->
<div class="row mt-4">
    <div class="col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h3>Update Information</h3>
                </div>
                <div class="card-text">
                    <form action="/hikes/{{hike.id}}/edit" method='post'>
                        {{> hikes-list-form }}
                        <div class="text-right">
                            <a href="/hikes/{{hike.id}}" class='text-muted mr-2'>Cancel</a>
                            {{#if currentUser}}
                                <button type="submit" class="btn btn-info" name="button">Update</button>
           
                            {{else}}
                                <a href="/login" class="btn btn-success navbar-btn">Login</a>
            
                            {{/if}}
                            {{!-- <a href='/hikes/{{hike.id}}/delete'><button type="button" class='btn btn-danger'>Delete</button></a> --}}
                              
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>