<!-- hikes-index -->
<div class="container">
    <div class="row mt-4">
        <div class="col-lg-6 offset-lg-3">
            <h1>Locations: </h1>
            {{#each hikes}}
                <div class="card mt-3">
                    <img class="card-img-top" src="{{this.imgUrl}}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.desc}}</p>
                        <div class="text-right">
                            <a href="/hikes/{{this.id}}" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>