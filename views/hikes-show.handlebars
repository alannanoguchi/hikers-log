<!-- views/hikes-show.handlebars -->

<div class="row mt-4">
  <div class="col-lg-6 offset-lg-3">
    <img class="img-fluid w-100 rounded mb-3" src="{{hike.imgUrl}}" alt="Card image cap">
    <h3>{{hike.name}}</h3>
        <div class="lead">{{hike.desc}}</div>
        <div class="text-right">
        <a href="/hikes/{{hike.id}}/edit">Edit</a>
    </div>
    

   <div class="row mt-4">
       <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title"> 
                        <h2>Places to go:</h2>
                        <div class="lead">{{hike.location}}</div>             
                    </div>
                </div> 
            </div>
        </div>
    </div>
    <div class="row mt-4">
       <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title"> 
                        <h2>Visited:</h2>
                        <div class="lead">{{hike.visited}}</div>                
                    </div>
                </div> 
            </div>
        </div>
    </div>